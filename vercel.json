{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "regions": ["bom1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "src/app/api/educator/documents/upload/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/educator/quiz/create/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/educator/quiz/[id]/question/[questionId]/replace/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/cron/educator-reminders/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/session-cleanup/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/session-cleanup",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/educator-reminders",
      "schedule": "0 9 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}